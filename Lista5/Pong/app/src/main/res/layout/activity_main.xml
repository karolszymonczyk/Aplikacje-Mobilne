<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF04658F"
        tools:context=".MainActivity" android:orientation="vertical" android:gravity="center_horizontal">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:gravity="center"
            android:id="@+id/p1">
        <Button
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:tag="long"
                android:background="@drawable/my_button"
                android:layout_height="30dp" android:id="@+id/b1p1" android:onClick="clickP1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:tag="medium"
                android:background="@drawable/my_button"
                android:layout_height="30dp" android:id="@+id/b2p1" android:onClick="clickP1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:tag="short"
                android:background="@drawable/my_button"
                android:layout_height="30dp" android:id="@+id/b3p1" android:onClick="clickP1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="PLAY"
                android:background="@drawable/my_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/bPlay"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:onClick="bPlay" android:layout_weight="1" android:enabled="false" android:textStyle="bold"
                android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:gravity="center"
            android:id="@+id/p2">
        <Button
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:tag="short"
                android:background="@drawable/my_button"
                android:layout_height="30dp" android:id="@+id/b1p2" android:onClick="clickP2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:tag="medium"
                android:background="@drawable/my_button"
                android:layout_height="30dp" android:id="@+id/b2p2" android:onClick="clickP2"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:tag="long"
                android:background="@drawable/my_button"
                android:layout_height="30dp" android:id="@+id/b3p2" android:onClick="clickP2"/>
    </LinearLayout>
</LinearLayout>