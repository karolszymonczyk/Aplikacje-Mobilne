<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
                android:text="OK"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:onClick="buttonClick"
                app:layout_constraintStart_toEndOf="@+id/input"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.067"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="266dp" app:srcCompat="@drawable/hangman0"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.493"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.048"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="komputer"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:textColor="#363535"
                android:textAlignment="center"/>
        <EditText
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="1"
                android:ems="10"
                android:id="@+id/input" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.069"/>
        <Button
                android:text="NEXT"
                android:layout_width="62dp"
                android:layout_height="35dp"
                android:id="@+id/bReset" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:onClick="bNextClick"/>

</android.support.constraint.ConstraintLayout>