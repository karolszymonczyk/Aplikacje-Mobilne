<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center|top">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="Date :   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <TextView
                android:text="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pDate" android:layout_weight="1"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="Time :   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"/>
        <TextView
                android:text="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pTime" android:layout_weight="1"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="Priority : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"/>
        <Button
                android:layout_width="45dp"
                android:layout_height="43dp" android:id="@+id/bP0" android:layout_weight="1"/>
        <Button
                android:text="!"
                android:layout_height="43dp" android:id="@+id/bP1" android:layout_weight="1"
                android:layout_width="45dp"/>
        <Button
                android:text="!!"
                android:layout_width="45dp"
                android:layout_height="43dp" android:id="@+id/bP2" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="normal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:id="@+id/pPrior" android:textAlignment="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="center">
        <TextView
                android:text="Type  : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_other"
                android:id="@+id/bOther" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_home"
                android:id="@+id/bHome" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_work"
                android:id="@+id/bWork" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_shopping"
                android:id="@+id/bShopping" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_action_date"
                android:id="@+id/bDate" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/pType" android:textAlignment="center"/>

</LinearLayout>
